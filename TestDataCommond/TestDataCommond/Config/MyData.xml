  <DataCommand Name="UpdateCustomer" Database="MyTestDb">
    <CommandText>
      <![CDATA[
        DECLARE @sql NVARCHAR(4000)
        set @sql='select * from Users where 1=1 '
        if @Name='张三'
          BEGIN
